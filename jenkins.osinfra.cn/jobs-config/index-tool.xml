<?xml version='1.1' encoding='UTF-8'?>
<project>
  <actions/>
  <description>this project is for opengauss index-tool image build </description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <com.gitee.jenkins.connection.GiteeConnectionProperty plugin="gitee@1.1.14">
      <giteeConnection>gitee</giteeConnection>
    </com.gitee.jenkins.connection.GiteeConnectionProperty>
    <com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty plugin="naginator@1.18.1">
      <optOut>false</optOut>
    </com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty>
  </properties>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@4.7.1">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>https://gitee.com/opengauss/infra.git</url>
        <credentialsId>tommylike_gitee_username_password</credentialsId>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>*/master</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="empty-list"/>
    <extensions/>
  </scm>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>#!/bin/bash
set -e

GIT_EMAIL=&quot;tommylike@gmail.com&quot;
#IMAGE_VERSION=$(git rev-parse HEAD)
IMAGE_VERSION=v0.0.1
PROJECT_NAME=&quot;index-tool&quot;

if hash git 2&gt;/dev/null; then
    IMAGE_VERSION=$(git rev-parse HEAD)
fi

if hash docker 2&gt;/dev/null; then
    docker login -u cn-north-4@$DOCKER_USER -p $DOCKER_PASS swr.cn-north-4.myhuaweicloud.com/opensourceway/opengauss/index-tool
else
	echo &quot;docker not installed.&quot;
    exit
fi

cd $WORKSPACE/src/index-tool

mvn clean install package -Dmaven.test.skip
cp target/index-tool.jar .

cat Dockerfile


docker build -t swr.cn-north-4.myhuaweicloud.com/opensourceway/opengauss/index-tool:$IMAGE_VERSION .
docker push     swr.cn-north-4.myhuaweicloud.com/opensourceway/opengauss/index-tool:$IMAGE_VERSION

docker rmi      swr.cn-north-4.myhuaweicloud.com/opensourceway/opengauss/index-tool:$IMAGE_VERSION</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers>
    <org.jenkinsci.plugins.credentialsbinding.impl.SecretBuildWrapper plugin="credentials-binding@1.27">
      <bindings>
        <org.jenkinsci.plugins.credentialsbinding.impl.UsernamePasswordMultiBinding>
          <credentialsId>huaweicloud-swr-token</credentialsId>
          <usernameVariable>DOCKER_USER</usernameVariable>
          <passwordVariable>DOCKER_PASS</passwordVariable>
        </org.jenkinsci.plugins.credentialsbinding.impl.UsernamePasswordMultiBinding>
        <org.jenkinsci.plugins.credentialsbinding.impl.UsernamePasswordMultiBinding>
          <credentialsId>tommylike_github_token</credentialsId>
          <usernameVariable>GIT_USER</usernameVariable>
          <passwordVariable>GIT_PASS</passwordVariable>
        </org.jenkinsci.plugins.credentialsbinding.impl.UsernamePasswordMultiBinding>
        <org.jenkinsci.plugins.credentialsbinding.impl.UsernamePasswordMultiBinding>
          <credentialsId>00441642-0437-4b00-9be4-ec0bb484d5c1</credentialsId>
          <usernameVariable>ARGOCD_USER</usernameVariable>
          <passwordVariable>ARGOCD_PASS</passwordVariable>
        </org.jenkinsci.plugins.credentialsbinding.impl.UsernamePasswordMultiBinding>
      </bindings>
    </org.jenkinsci.plugins.credentialsbinding.impl.SecretBuildWrapper>
  </buildWrappers>
</project>