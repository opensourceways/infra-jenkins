  <builders>
    <hudson.tasks.Shell>
      <command>cd $WORKSPACE
echo "###### build repo ######"

echo "build repo is: website: $build_website and blog: $build_blog"

time=`date "+%Y%m%d%H%M%S"`
build_version="v1.0.$time"

echo "build version: $build_version"

website_imageId=""
blog_imageId=""

if [ "$build_website" == "true" ]; then
	project_name=website
	echo "###################################### build website: $build_website ######################################"
    cd "$WORKSPACE/openGauss-website"
    docker build -t ${project_name}:${build_version} .
    website_imageId=$(docker images | grep ${project_name} | grep ${build_version} | awk '{print $3}')
    sh /var/jenkins_home/swr_upload.sh opengauss  ${project_name}:${build_version}
    echo "build website successful; $website_imageId"
fi

if [ "$build_blog" == "true" ]; then
	project_name=blog
	echo "###################################### build blog: $build_blog ######################################"
    cd "$WORKSPACE/openGauss-blog"
    docker build -t ${project_name}:${build_version} .
    blog_imageId=$(docker images | grep ${project_name} | grep ${build_version} | awk '{print $3}')
    sh /var/jenkins_home/swr_upload.sh opengauss  ${project_name}:${build_version}
     echo "build blog successful; $website_imageId"
fi

if [ $website_imageId ]; then
	echo "remote website images: $website_imageId"
    docker rmi -f $website_imageId
fi

if [ $blog_imageId ]; then
	echo "remote blog images: $blog_imageId"
    docker rmi -f $blog_imageId
fi

echo "build task end."

</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
